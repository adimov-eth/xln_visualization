{
  "name": "xln-network-visualization",
  "version": "1.0.0",
  "description": "Extended Lightning Network Interactive Visualization Dashboard",
  "main": "src/d3-app/index.tsx",
  "scripts": {
    "dev": "webpack serve --mode development --open --port 4000",
    "build": "webpack --mode production",
    "server": "WS_PORT=4001 ts-node --project tsconfig.server.json src/server/server.ts",
    "server:dev": "WS_PORT=4001 nodemon --watch src/server --exec ts-node --project tsconfig.server.json src/server/server.ts",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:accessibility": "jest --testPathPattern=tests/accessibility",
    "test:visual": "jest --testPathPattern=tests/visual",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "d3": "^7.8.5",
    "d3-force": "^3.0.0",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "socket.io-client": "^4.6.1",
    "socket.io": "^4.6.1",
    "express": "^4.18.2",
    "zustand": "^4.4.7",
    "immer": "^10.0.3",
    "three": "^0.160.0",
    "@apollo/client": "^3.8.8",
    "graphql": "^16.8.1",
    "msgpack-lite": "^0.1.26",
    "lodash": "^4.17.21",
    "date-fns": "^3.0.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/d3": "^7.4.3",
    "@types/d3-force": "^3.0.9",
    "@types/d3-selection": "^3.0.10",
    "@types/d3-zoom": "^3.0.8",
    "@types/three": "^0.160.0",
    "@types/lodash": "^4.14.202",
    "@types/msgpack-lite": "^0.1.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "ts-loader": "^9.5.1",
    "html-webpack-plugin": "^5.6.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/user-event": "^14.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.7.0",
    "axe-core": "^4.8.3",
    "@axe-core/react": "^4.8.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}