{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/server/**/*",
    "src/d3-app/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}